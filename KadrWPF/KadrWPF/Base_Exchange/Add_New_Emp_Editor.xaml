<Window x:Class="WpfControlLibrary.Add_New_Emp_Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="Редактирование данных сотрудника" ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:WpfControlLibrary" ResizeMode="CanMinimize" Name="_this" Language="ru-RU"
        mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Closing="_this_Closing"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <ResourceDictionary>
            <local:MainConditionConverter x:Key="MainConditionConverter"/>
            <local:IsEnabledInputSalary_Converter x:Key="IsEnabledInputSalary_Converter"/>
            <local:IsEnabledInputSalary_MultiValueConverter x:Key="IsEnabledInputSalary_MultiValueConverter"/>
            <local:Tariff_RateMultiValueConverter x:Key="Tariff_RateMultiValueConverter"/>
            <local:Project_ApprovalConverter x:Key="Project_ApprovalConverter"/>
            <local:HeaderTab_Converter x:Key="HeaderTab_Converter"/>
            <local:ComboBoxSalaryVisibleConverter x:Key="ComboBoxSalaryVisibleConverter"/>
            
            <Style x:Key="Work_Condition_RowStyle" TargetType="{x:Type DataGridRow}">
                <Setter Property="Background" Value="{Binding SIGN_MAIN_TYPE, Converter={StaticResource MainConditionConverter}}" />
            </Style>
            
            <Style x:Key="textBoxSalaryStyle" TargetType="{x:Type TextBox}">
                <Style.Triggers>
                    <Trigger Property="IsReadOnly" Value="True">
                        <Setter Property="Background" Value="#FFF8FCFF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="groupBox_Term_HireStyle" TargetType="{x:Type GroupBox}" >
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="2">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="groupBox_Term_TransferStyle" TargetType="{x:Type GroupBox}" >
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="1">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="grid_HireOrderStyle" TargetType="{x:Type Grid}" >
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="2">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="grid_TransferOrderStyle" TargetType="{x:Type Grid}" >
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="1">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="local:Wpf_Commands.SaveEmp_Project" CanExecute="SaveEmp_Project_CanExecute" Executed="SaveEmp_Project_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.SaveTransfer_Project" CanExecute="SaveTransfer_Project_CanExecute" Executed="SaveTransfer_Project_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.AddEdu" CanExecute="AddEdu_CanExecute" Executed="AddEdu_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.EditEdu" CanExecute="EditEdu_CanExecute" Executed="EditEdu_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.DeleteEdu" CanExecute="EditEdu_CanExecute" Executed="DeleteEdu_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Add_List_Repl_Emp" CanExecute="AddEdu_CanExecute" Executed="Add_List_Repl_Emp_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Add_List_Repl_Contr" CanExecute="AddEdu_CanExecute" Executed="Add_List_Repl_Contr_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.AddProject_Appendix" CanExecute="AddEdu_CanExecute" Executed="AddProject_Appendix_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Edit_List_Repl_Emp" CanExecute="Edit_List_Repl_Emp_CanExecute" Executed="Edit_List_Repl_Emp_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Edit_List_Repl_Contr" CanExecute="Edit_List_Repl_Contr_CanExecute" Executed="Edit_List_Repl_Contr_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.EditProject_Appendix" CanExecute="EditProject_Appendix_CanExecute" Executed="EditProject_Appendix_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Delete_List_Repl_Emp" CanExecute="Edit_List_Repl_Emp_CanExecute" Executed="Delete_List_Repl_Emp_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Delete_List_Repl_Contr" CanExecute="Edit_List_Repl_Contr_CanExecute" Executed="Delete_List_Repl_Contr_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.DeleteProject_Appendix" CanExecute="EditProject_Appendix_CanExecute" Executed="DeleteProject_Appendix_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.ViewProject_Appendix" CanExecute="EditProject_Appendix_CanExecute" Executed="ViewProject_Appendix_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Save_Project_Approval" CanExecute="Save_Project_Approval_CanExecute" Executed="Save_Project_Approval_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Form_Order_Project" CanExecute="Form_Order_Project_CanExecute" Executed="Form_Order_Project_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Form_Contract" CanExecute="Form_Contract_CanExecute" Executed="Form_Contract_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Project_To_Transfer" CanExecute="Project_To_Transfer_CanExecute" Executed="Project_To_Transfer_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Registration_Project" CanExecute="Registration_Project_CanExecute" Executed="Registration_Project_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Annul_Project" CanExecute="Annul_Project_CanExecute" Executed="Annul_Project_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Edit_Address_None_Kladr" CanExecute="AddEdu_CanExecute" Executed="Edit_Address_None_Kladr_Executed"/>
        <CommandBinding Command="local:Wpf_Commands.Edit_From_Position_By_Project" CanExecute="Edit_From_Position_By_Project_CanExecute" Executed="Edit_From_Position_By_Project_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False" HorizontalAlignment="Center" Name="dpStatusProject">
            <Label Content="Статус проекта - " Foreground="Red" />
            <Label Name="lbStatusProject" 
                   Content="{Binding Path=PROJECT_PLAN_APPROVAL_ID, Converter={StaticResource Project_ApprovalConverter}, Mode=OneWay}"/>
        </DockPanel>
        <TabControl Grid.Row="1">
            <TabControl.Items>
                <TabItem Header="Данные сотрудника">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Row="0" Grid.Column="0" Header="Фото сотрудника">
                            <Image Name="imPhoto"  Margin="7,4,4,4"
                            Source="{Binding Path=PHOTO}" MinHeight="133" MaxHeight="133" MinWidth="100" MaxWidth="100"></Image>
                        </GroupBox>
                        <GroupBox Grid.Row="0" Grid.Column="1" Header="Персональные данные" Name="gbPerson_Data">
                            <AdornerDecorator>
                                <Grid Name="grPerson_Data">
                                    <Grid.Resources>
                                        <x:Array x:Key="Emp_Sexs" Type="{x:Type sys:String}">
                                            <sys:String>М</sys:String>
                                            <sys:String>Ж</sys:String>
                                        </x:Array>
                                    </Grid.Resources>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol1"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol2"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol3"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="Фамилия" ></TextBlock>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="4" MinWidth="150" Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}" CharacterCasing="Upper">
                                        <TextBox.Text>
                                            <Binding Path="EMP_LAST_NAME">
                                                <Binding.ValidationRules>
                                                    <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="7" Text="Имя"></TextBlock>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="4" Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}" CharacterCasing="Upper">
                                        <TextBox.Text>
                                            <Binding Path="EMP_FIRST_NAME">
                                                <Binding.ValidationRules>
                                                    <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="7" Text="Отчество" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="4" VerticalAlignment="Center"
                                             Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}" CharacterCasing="Upper">
                                        <TextBox.Text>
                                            <Binding Path="EMP_MIDDLE_NAME">
                                                <Binding.ValidationRules>
                                                    <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Margin="7" Text="Табельный №" HorizontalAlignment="Right" ></TextBlock>
                                    <TextBox Grid.Row="0" Grid.Column="3" Margin="4" Text="{Binding Path=VISUAL_PER_NUM}" IsReadOnly="True"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Margin="7" Text="Пол" HorizontalAlignment="Right" ></TextBlock>
                                    <ComboBox Grid.Row="1" Grid.Column="3" Margin="4" Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}"
                                          ItemsSource="{Binding Source={StaticResource Emp_Sexs}}" SelectedItem="EMP_SEX">
                                        <ComboBox.Text>
                                            <Binding Path="EMP_SEX" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules>
                                                    <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </ComboBox.Text>
                                    </ComboBox>
                                    <TextBlock Grid.Row="3" Grid.Column="2" Margin="7" Text="Дата рождения" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                                    <DatePicker Margin="4" Grid.Row="3" Grid.Column="3"
                                            Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}">
                                        <DatePicker.SelectedDate>
                                            <Binding Path="EMP_BIRTH_DATE">
                                                <Binding.ValidationRules>
                                                    <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </DatePicker.SelectedDate>
                                    </DatePicker>
                                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="6" Style="{StaticResource grid_TransferOrderStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol1"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol2"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol3"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol4"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="7" Text="Перевод ИЗ&#13;подразделения"
                                                   VerticalAlignment="Center"></TextBlock>
                                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" VerticalAlignment="Center"
                                                  Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}" 
                                                  ItemsSource="{Binding}" Name="cbSubdivOld" DisplayMemberPath="DISP_SUBDIV" 
                                                  SelectedValuePath="SUBDIV_ID" SelectedValue="{Binding Path=PREV_SUBDIV_ID}"
                                                  IsEnabled="False">
                                        </ComboBox>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="Основание"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="4" VerticalAlignment="Center"
                                                  Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}"
                                                  ItemsSource="{Binding}" Name="cbBASE_DOC_ID" DisplayMemberPath="BASE_DOC_NAME" SelectedValuePath="BASE_DOC_ID">
                                            <ComboBox.SelectedValue>
                                                <Binding Path="BASE_DOC_ID" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules>
                                                        <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </ComboBox.SelectedValue>
                                        </ComboBox>
                                        <CheckBox Grid.Row="0" Grid.Column="3" Margin="4" Content=" Признак УТК" 
                                                  VerticalAlignment="Center">
                                            <CheckBox.IsChecked>
                                                <Binding Path="SIGN_TRANSFER_QM">
                                                    <Binding.ValidationRules>
                                                        <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                    </Grid>
                                    <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol1"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol2"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol3"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol4"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="Прием В&#13;подразделение">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}" >
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="2">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="Перевод В&#13;подразделение">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}" >
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=TYPE_TRANSFER_ID}" Value="1">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" VerticalAlignment="Center"
                                                  Validation.ErrorTemplate="{StaticResource NotNullErrorTemplate}"
                                                  ItemsSource="{Binding}" Name="cbSubdiv" DisplayMemberPath="DISP_SUBDIV" SelectedValuePath="SUBDIV_ID" 
                                                  SelectionChanged="cbSubdiv_SelectionChanged">
                                            <ComboBox.SelectedValue>
                                                <Binding Path="SUBDIV_ID" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules>
                                                        <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </ComboBox.SelectedValue>
                                            <ComboBox.Resources>
                                                <Style TargetType="ComboBoxItem">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=SUB_ACTUAL_SIGN}" Value="0">
                                                            <Setter Property="Background" Value="LightGray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ComboBox.Resources>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="6" Style="{StaticResource grid_HireOrderStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol1"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol2"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol3"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PersCol4"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Row="6" Grid.Column="0" Margin="4" Content=" МОЛ" IsEnabled="False"
                                                  VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                  IsChecked="{Binding Path=SIGN_MAT_RESP_PERSON}" Visibility="Collapsed"/>
                                        <CheckBox Grid.Row="6" Grid.Column="1" Margin="4" Content=" Совмещение" 
                                                  VerticalAlignment="Center">
                                            <CheckBox.IsChecked>
                                                <Binding Path="SIGN_COMB">
                                                    <Binding.ValidationRules>
                                                        <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                        <CheckBox Grid.Row="6" Grid.Column="3" Margin="4" Content=" Признак УТК" 
                                                  VerticalAlignment="Center">
                                            <CheckBox.IsChecked>
                                                <Binding Path="SIGN_TRANSFER_QM">
                                                    <Binding.ValidationRules>
                                                        <local:ValidationNullRule ValidatesOnTargetUpdated="True"/>
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>                                        
                                    </Grid>                                   
                                </Grid>
                            </AdornerDecorator>
                        </GroupBox>
                        <TabControl Grid.Row="1" Grid.ColumnSpan="2">
                            <TabControl.Items>
                                <TabItem Header="Общие">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <GroupBox Grid.Row="0" Header="Документ, удостоверяющий личность" Name="gbPassport">
                                            <Grid Margin="6,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Col1"/>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Col2"/>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Col1"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="Тип документа"/>
                                                <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" Name="cbType_Per_Doc"
                                                      DisplayMemberPath="NAME_DOC" SelectedValuePath="TYPE_PER_DOC_ID"
                                                      SelectedValue="{Binding Path=TYPE_PER_DOC_ID}" SelectionChanged="cbType_Per_Doc_SelectionChanged"/>
                                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="7" Text="Серия"/>
                                                <xceed:MaskedTextBox Grid.Row="1" Grid.Column="1" Margin="4" Value="{Binding Path=SERIA_PASSPORT}"                                                      
                                                                 IncludeLiteralsInValue="False" IncludePromptInValue="False"
                                                                 Name="mbSeria_Passport" BeepOnError="True" ValueDataType="{x:Type sys:String}" />
                                                <TextBlock Grid.Row="1" Grid.Column="2" Margin="7" Text="Номер" HorizontalAlignment="Right"/>
                                                <xceed:MaskedTextBox Grid.Row="1" Grid.Column="3" Margin="4" Value="{Binding Path=NUM_PASSPORT}"
                                                                 IncludeLiteralsInValue="False" IncludePromptInValue="False"
                                                                 BeepOnError="True" ValueDataType="{x:Type sys:String}"
                                                                 Name="mbNum_Passport" MinWidth="{Binding ElementName=dpWhen_Given, Path=ActualWidth}"/>
                                                <TextBlock Grid.Row="2" Grid.Column="0" Margin="7" Text="Кем выдан"/>
                                                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="4" Text="{Binding Path=WHO_GIVEN}" 
                                                     TextWrapping="Wrap" MaxWidth="290"/>
                                                <TextBlock Grid.Row="4" Grid.Column="0" Margin="7" Text="Дата выдачи"/>
                                                <DatePicker Margin="4" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Name="dpWhen_Given">
                                                    <DatePicker.SelectedDate>
                                                        <Binding Path="WHEN_GIVEN">
                                                        </Binding>
                                                    </DatePicker.SelectedDate>
                                                </DatePicker>
                                                <TextBlock Grid.Row="4" Grid.Column="2" Margin="7" Text="Гражданство" HorizontalAlignment="Right"/>
                                                <TextBox Grid.Row="4" Grid.Column="3" Margin="4" Text="{Binding Path=CITIZENSHIP}"/>
                                                <TextBlock Grid.Row="6" Grid.Column="0" Grid.RowSpan="2" Margin="7,0,7,0" Text="Семейное&#13;положение"/>
                                                <ComboBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" Name="cbMar_State_ID"
                                                      DisplayMemberPath="NAME_STATE" SelectedValuePath="MAR_STATE_ID"
                                                      SelectedValue="{Binding Path=MAR_STATE_ID}"/>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Grid.Row="0" Grid.Column="1" Header="Сведения о рождении" Name="gbBirth">
                                            <Grid Margin="6,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32"/>
                                                    <ColumnDefinition Width="18" />
                                                    <ColumnDefinition Width="43"/>
                                                    <ColumnDefinition Width="115" />
                                                    <ColumnDefinition Width="10"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Margin="7" Text="Страна" Grid.ColumnSpan="2" />
                                                <TextBox Grid.Column="2" Margin="4" MinWidth="150" Text="{Binding Path=COUNTRY_BIRTH}" Grid.ColumnSpan="2" />
                                                <TextBlock Grid.Row="1" Margin="7" Text="Регион" Grid.ColumnSpan="2" />
                                                <TextBox Grid.Row="1" Grid.Column="2" Margin="4" Text="{Binding Path=REGION_BIRTH}" Grid.ColumnSpan="2" />
                                                <TextBlock Grid.Row="2" Margin="7" Text="Город" Grid.ColumnSpan="2" />
                                                <TextBox Grid.Row="2" Grid.Column="2" Margin="4" Text="{Binding Path=CITY_BIRTH}" Grid.ColumnSpan="2" />
                                                <TextBlock Grid.Row="4" Margin="7" Text="Район" Grid.ColumnSpan="2" />
                                                <TextBox Grid.Row="4" Grid.Column="2" Margin="4" Text="{Binding Path=DISTR_BIRTH}" Grid.ColumnSpan="2" />
                                                <TextBlock Grid.Row="5" Margin="7" Text="Пункт" Grid.ColumnSpan="2" />
                                                <TextBox Grid.Row="5" Grid.Column="2" Margin="4" Text="{Binding Path=LOCALITY_BIRTH}" Grid.ColumnSpan="2" />
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Прочее" Name="gbOther">
                                            <Grid Margin="6,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Col1"/>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Col2"/>
                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="GrOther1"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="10"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="7" Text="СНИЛС"/>
                                                <TextBox Grid.Row="0" Grid.Column="1" Margin="4" Text="{Binding Path=INSURANCE_NUM}" Visibility="Collapsed"/>
                                                <xceed:MaskedTextBox Grid.Row="0" Grid.Column="1" Margin="4" Mask="000-000-000 00"
