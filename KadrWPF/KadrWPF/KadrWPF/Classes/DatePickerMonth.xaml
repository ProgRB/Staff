<UserControl x:Class="KadrWPF.Classes.DatePickerMonth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KadrWPF.Classes"
             xmlns:wpfl="clr-namespace:WpfControlLibrary"
             mc:Ignorable="d">
    <Grid>
        <DatePicker Grid.Column="3" SelectedDate="{Binding ElementName=_this, Path=SelectedDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"  
                    VerticalAlignment="Center"
                    wpfl:DatePickerCalendar.IsMonthYear="True" wpfl:DatePickerDateFormat.DateFormat="MMMM yyyy"/>
    </Grid>
</UserControl>
